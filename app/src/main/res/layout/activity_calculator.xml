<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.faizanali.allinone.Calculator"
    android:background="@drawable/a9">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/imageView4"
        android:src="@drawable/cal"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button15" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/imageView5"
        android:src="@drawable/l4"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     SpeakingCalculator"
        android:id="@+id/textView5"
        android:layout_above="@+id/imageView5"
        android:textSize="30dp"
        android:textColor="#fb02fefe"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button16"
        android:layout_alignEnd="@+id/imageView5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText8"
        android:background="#01ccff"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:hint="Enter First Number"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:id="@+id/button15"
        android:background="@drawable/rounded_corners"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/editText8"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#f91e1e"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mul"
        android:id="@+id/button16"
        android:layout_alignTop="@+id/button15"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_corners"
        android:textStyle="bold"
        android:textColor="#f91e1e"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sub"
        android:id="@+id/button17"
        android:layout_marginTop="0dp"
        android:background="@drawable/rounded_corners"
        android:layout_alignTop="@+id/button18"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#f91e1e"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="div"
        android:id="@+id/button18"
        android:layout_marginTop="40dp"

        android:background="@drawable/rounded_corners"
        android:layout_below="@+id/button16"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="#f91e1e"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="speak"
        android:id="@+id/button19"
        android:background="@drawable/rounded_corners"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/button20"
        android:textStyle="bold"
        android:textColor="#f91e1e"
        android:typeface="serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:id="@+id/button20"
        android:background="@drawable/rounded_corners"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="#f91e1e"
        android:typeface="serif" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText9"
        android:background="#ffffff"
        android:hint="Enter Second Number"
        android:layout_below="@+id/editText8"
        android:layout_alignEnd="@+id/imageView5"
        android:textColor="#050505" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULT "
        android:id="@+id/textView6"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"

        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:background="@drawable/rounded_corners"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#f91e1e" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="back"
        android:id="@+id/button29"
        android:textSize="10dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_corners"
        android:typeface="serif"
        android:textColor="#f91e1e"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
