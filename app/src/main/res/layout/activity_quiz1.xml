<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.faizanali.allinone.Quiz1"
    android:background="@drawable/a24">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q.1. Which is Captital of UP ?"
        android:id="@+id/textView18"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save and next"
        android:id="@+id/button43"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="106dp"
        android:textColor="#fe0202"
        android:textStyle="bold"
        android:typeface="serif"
        android:background="@drawable/rounded_corners" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave quiz"
        android:id="@+id/button44"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0101"
        android:textStyle="bold"
        android:typeface="serif"
        android:background="@drawable/rounded_corners" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button43">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delhi"
            android:id="@+id/radioButton"
            android:checked="false"
            android:textSize="20dp"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patna"
            android:id="@+id/radioButton2"
            android:checked="false"
            android:textSize="20dp"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lucknow"
            android:id="@+id/radioButton3"
            android:checked="false"
            android:textSize="20dp"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Srinagar"
            android:id="@+id/radioButton4"
            android:checked="false"
            android:textSize="20dp"
            android:textColor="#ffffff" />
    </RadioGroup>
</RelativeLayout>
